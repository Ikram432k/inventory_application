extends layout

block content
  div.formView
    form(method='POST' action='')
      p=title
        div.form-group
          label(for='name') Genre:
          input#name.form-control(type='text', placeholder='Fantasy, Horror etc.' name='name' value=(undefined===genre ? '' : genre.name))
        div.form-btn
          button.btn.btn-primary(type='submit') Submit 
          p
            a.delete(href='/catalog/genres') cancel
      if errors
        ul
          for error in errors
            li!= error.msg