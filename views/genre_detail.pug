extends layout

block content

  h1 Genre: #{genre.name}

  div(style='margin-left:20px;margin-top:20px')

    h4 Animes 

    dl
      each anime in genre_anime
        dt
          a(href=anime.url) #{anime.title}
        dd #{anime.summary}

      else
        p This genre has no anime
      hr
      p
        a(href=genre.url+'/delete') Delete Genre
      p
        a(href=genre.url+'/update') Update Genre