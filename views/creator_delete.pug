extends layout

block content
  div.content
    div.head
      h1 #{title} : #{animeCreator.name}
  //p= author.lifespan

  if creators_anime.length
    div.anime
      p #[strong Delete the following animes before attempting to delete this Anime.]
    div.anime
      h4 Animes 

    each anime  in creators_anime
      div.anime
        a(href=anime.url) #{anime.title}
      div.anime
        p #{anime.summary}

  else
    div.formView
      form(method='POST' action='')
        div.form-group
          p Do you really want to delete this Animecreator?
            input#animeCreatorid.form-control(type='hidden',name='animeCreatorid', required='true', value=animeCreator._id )

        div.form-btn
          button.btn.btn-primary(type='submit') Delete
          p
            a.delete(href='/catalog/animecreaters') cancel