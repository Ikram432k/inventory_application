extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='title') Title:
      input#title.form-control(type='text', placeholder='Name of anime' name='title' required='true' value=(undefined===anime ? '' : anime.title) )
    div.form-group
      label(for='creator') Creator:
      select#creator.form-control(type='select', placeholder='Select creator' name='creator' required='true' )
        - animeCreators.sort(function(a, b) {let textA = a.first_name.toUpperCase(); let textB = b.first_name.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;});
        for creator in animeCreators
          if anime
            option(value=anime._id selected=(anime._id.toString()===anime.creator._id.toString() ? 'selected' : false) ) #{anime.name}
          else
            option(value=creator._id) #{creator.name}
    div.form-group
      label(for='summary') Summary:
      textarea#summary.form-control(type='textarea', placeholder='Summary' name='summary' required='true') #{undefined===anime ? '' : anime.summary}
    div.form-group
      label Genre:
      div
        for genre in genres
          div(style='display: inline; padding-right:10px;')
            input.checkbox-input(type='checkbox', name='genre', id=genre._id, value=genre._id, checked=genre.checked )
            label(for=genre._id) #{genre.name}
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
